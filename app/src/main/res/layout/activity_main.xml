<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="1500dp"
        android:layout_height="1000dp"
        android:background="@drawable/ic_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.646"
        app:srcCompat="@drawable/ic_background" />

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="105dp"
        android:layout_height="24dp"
        android:layout_marginTop="204dp"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="false"
        android:text="username"
        android:textColor="@color/dark_purple"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/createUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967" />

    <TextView
        android:id="@+id/textViewSignupText"
        android:layout_width="243dp"
        android:layout_height="23dp"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="false"
        android:text="Don't have an account?"
        android:textAlignment="center"
        android:textColor="#976BCD"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.894" />

    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_width="247dp"
        android:layout_height="35dp"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="false"
        android:padding="2dp"
        android:text="Sign up"
        android:textAlignment="center"
        android:textColor="@color/dark_purple"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSignupText"
        app:layout_constraintVertical_bias="0.062" />

    <Button
        android:id="@+id/SignIn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="170dp"
        android:layout_height="57dp"
        android:background="@drawable/round_button"
        android:ellipsize="none"
        android:fontFamily="sans-serif-medium"
        android:padding="6dp"
        android:text="Sign In"
        android:textAlignment="gravity"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:backgroundTint="#6D3398"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPassword"
        app:layout_constraintVertical_bias="0.103"
        app:strokeColor="#C59C9C" />

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="238dp"
        android:layout_height="35dp"
        android:background="@drawable/round_button"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textViewPasswd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.726" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="238dp"
        android:layout_height="35dp"
        android:background="@drawable/round_button"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="6dp"
        android:textAlignment="gravity"
        android:textColorHint="#D5FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.583" />

    <TextView
        android:id="@+id/textViewPasswd"
        android:layout_width="89dp"
        android:layout_height="27dp"
        android:layout_marginTop="368dp"
        android:fontFamily="sans-serif-medium"
        android:text="password"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/createPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98" />

</androidx.constraintlayout.widget.ConstraintLayout>